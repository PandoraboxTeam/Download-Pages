html(
    lang="zh_cn"
    xmlns:ng="http://angular.org"
    ng-app="PB"
    ng-controller="BaseController"
)
head
    meta(name="renderer",content="webkit")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(
        name="viewport"
        content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no"
    )
    title PandoraBox
    link(
        rel="stylesheet"
        type="text/css"
        href="//cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.css"
    )
    style.
        .row > div {
            height: 36px;
            background-color: #f9f9f9;
            cursor: pointer;
            line-height: 36px;
        }
        .row > div:nth-child(2n) {
            background-color: #fff;
        }
        .row > div:hover {
            background-color: #f7f7f9;
        }
body.container-fluid
    h1(ng-bind="curPath")
    .row
        div(
            ng-repeat="item in list track by $index"
            alt="{{item.name}}"
            title="{{item.name}}"
        )
            .col-sm-12(
                ng-click="prev()"
                ng-bind="::'..'"
                ng-if="$first&&curQueue.length!=0"
            )
            .col-sm-12(
                ng-click="enter(item)"
                ng-bind-template="{{item.name}}/"
                ng-if="!!item.list"
            )
            a(
                ng-href="{{item.href}}"
                ng-bind="item.name"
                ng-class="{true: 'col-sm-8', false: 'col-sm-12'}[!!item.date]"
                ng-if="!item.list"
            )
            .col-sm-4(
                ng-bind="item.date"
                ng-if="!!item.date"
            )

    script(
        type="text/javascript"
        src="//cdn.bootcss.com/angular.js/1.5.11/angular.min.js"
    )
    script(
        type="text/javascript"
        src="script.js"
    )
